#include <RCSwitch.h>

#include <Wire.h>
#include <BMP085.h> 
BMP085 dps = BMP085(); 
long Temperature = 0, Pressure = 0, pres = 0;

RCSwitch mySwitch = RCSwitch();

void setup() {
  Serial.begin(9600);
  Wire.begin(); 
  delay(1000);
  dps.init();
  
  pinMode(7, OUTPUT);
  mySwitch.enableTransmit(7);
  
  mySwitch.send("Loading...");  
  delay(700);
}

void loop() {
  dps.getPressure(&Pressure); 
  dps.getTemperature(&Temperature);
//  pres = Pressure/133.3;
  Serial.print("Pres = ");
  Serial.print(Pressure/133.3);
  Serial.print("Temp = ");
  Serial.println(Temperature*0.1);
  mySwitch.send(Pressure/133.3, 24); //здесь 24 меняю на нужное кол-во бит
  delay(200);
  mySwitch.send(Temperature*0.1, 24);
  delay(500);
}
